#: import Animation kivy.animation.Animation

<StandbyMode>:
    orientation: 'vertical'
    MDLabel:
        # on_kv_post: animation = Animation(pos_hint={'x': .8}, duration=3.)+Animation(pos_hint={'x': 0}, duration=3.); animation.repeat = True; animation.start(self)
        pos_hint: {'x': 0}
        size: self.texture_size
        id: monitor_label
        text: 'Standby Mode'
        theme_text_color: "Primary"
        font_style: 'H4'
        size_hint_y: .1
        halign: 'center'
    MDBoxLayout:
        orientation: 'vertical'
        Label:
        MDIconButton:
            icon: "lock-alert"
            pos_hint: {'center_y': 1, 'center_x': .5}
            user_font_size: "64sp"
            theme_text_color: "Custom"
            text_color: 1,0,0,1
        MDLabel:
            text: 'System Currently Switched Off!'
            valign: 'top'
            halign: 'center'
            font_size: 20
            theme_text_color: 'Custom'
            text_color: 1,.412,.706,1
        Label:
