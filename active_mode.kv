<ActiveMode>:
    orientation: 'vertical'
    MDLabel:
        size_hint_y: .1
        id: monitor_label
        text: 'Active Mode'
        color: 1,1,1,1
        font_size: 25
        halign: 'center'
        valign: 'center'
    CanvasDrawing:
        id: graphics_canvas
        widget_width: self.width
        widget_height: self.height + monitor_label.height
        widget_center_x: self.center_x
        widget_center_y: self.center_y + monitor_label.height
        bus_top: self.center_y + self.height*.3 + monitor_label.height
        bus_left: self.center_x - self.width*.125
        bus_bottom: self.center_y - self.height*.3
        bus_right: self.center_x + self.width*.125
        boundary_top: self.center_y + self.height*.4 + monitor_label.height
        boundary_left: self.center_x - self.width*.2
        boundary_bottom: self.center_y - self.height*.4
        boundary_right: self.center_x + self.width*.2
        dy: self.height*.1*.5
        dx: self.width*.075*.5
        top_offset: monitor_label.height
        monitor_screen: root.monitor_screen
        canvas.before:
            Color:
                id: boundary_color
                rgba: .1, 1, .1, .9
            Line:
                dash_length: 1
                dash_offset: 3
                width: 2.
                rectangle: (self.center_x - self.width*.2, self.center_y - self.height*.4, self.width*.4, self.height*.8)
        canvas.after:
            Color:
                id: bus_color
                rgba: 1, 1, 1, .9
            Line:
                width: 4.
                rectangle: (self.center_x - self.width*.125, self.center_y - self.height*.3, self.width*.25, self.height*.6)
        Label:
            center: root.center
            text: 'Bus'
            font_size: 18
