#: include ./monitor.kv
#: include ./splash.kv

ScreenManager:
    id: screen_manager
    Screen:
        name: 'splash_screen'
        SplashScreen:
            screen_manager: screen_manager
            app_window: app
            monitor_screen: monitor_screen


    Screen:
        name: 'main_screen'
        BoxLayout:
            orientation: 'vertical'
            MDToolbar:
                title: "Blind Spot Detection and Monitoring System"
                elevation: 10
                md_bg_color: [0, 0, 0, 1]
                anchor_title: 'center'
            MonitorScreen:
                id: monitor_screen
