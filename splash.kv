<SplashScreen>:
    canvas.before:
        Color:
            rgba: 0,0,0,.5
        Rectangle:
            size: self.size
            pos: self.pos
    MDBoxLayout:
        orientation: 'vertical'
        padding: 1
        Label:
            text: 'Kayoola BSDS'
            halign: 'center'
            valign: 'middle'
            font_size: 40
            padding: 5,5
            bold: True
            size_y: .2
        Label:
            text: 'Blind Spot Detection and Monitoring\nSystem for the Kayoola Buses'
            halign: 'center'
            valign: 'middle'
            font_size: 15
            padding: 5,5
            bold: 'true'
            size_y: .2
        MDProgressBar:
            id: progress_bar
            padding: 5,5
            size_x: .8
            max: 100
            value: 5
        Label:
            id: progress_bar_label
            text: 'Loading.. [5 %]'
            halign: 'center'
            valign: 'middle'
            font_size: 12
            padding: 5,5
            bold: 'true'
        Label:
            text: 'Copyrights, Kiira Motors Corporation'
            halign: 'left'
            valign: 'middle'
            font_size: 12
            padding: 5,5
            bold: 'true'

