#: include monitor.kv
#: include splash.kv

<MessageItem>:
    MDLabel:
        text: 'Hi there!'
        theme_text_color:  "Custom"
        md_bg_color: 0,0,1,.6

ScreenManager:
    id: screen_manager
    Screen:
        name: 'splash_screen'
        SplashScreen:
            screen_manager: screen_manager
            app_window: app
            monitor_screen: monitor_screen


    Screen:
        name: 'main_screen'
        BoxLayout:
            orientation: 'vertical'
            MDToolbar:
                title: "Blind Spot Detection and Monitoring System"
                elevation: 10
                theme_text_color:  "Custom"
                md_bg_color: 0.753,0.753,0.753,.6
                anchor_title: 'center'
                right_action_items: [["message-alert", app.show_messages, "Notification messages"]]
                specific_text_color: 1,0,0,1
            MonitorScreen:
                id: monitor_screen
