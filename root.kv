#: include monitor.kv
#: include splash.kv
#: import Animation kivy.animation.Animation

<MessageItem>:
    MDLabel:
        text: 'Hi there!'
        theme_text_color:  "Custom"
        md_bg_color: 0,0,1,.6

ScreenManager:
    id: screen_manager
    Screen:
        name: 'splash_screen'
        SplashScreen:
            screen_manager: screen_manager
            app_window: app
            monitor_screen: monitor_screen


    Screen:
        name: 'main_screen'
        BoxLayout:
            orientation: 'vertical'
            MDToolbar:
                on_kv_post: animation = Animation(specific_text_color=(0,1,1,1), duration=2.)+Animation(specific_text_color=(1,1,1,1), duration=2.); animation.repeat = True; animation.start(self)
                title: "Blind Spot Detection and Monitoring System"
                elevation: 10
                theme_text_color:  "Custom"
                md_bg_color: 0.753,0.753,0.753,.6
                anchor_title: 'center'
                # specific_text_color: 1,1,1,.8
            MonitorScreen:
                id: monitor_screen
